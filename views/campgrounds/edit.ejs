<% include ../partials/header %>
<div class="container">
<div class="row">
<h1 style="text-align: center;">Edit <%= campground.name %></h1>
<div style="width: 30%; margin: 25px auto;">
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
		<div class="form-group">
	<input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%=campground.name%>">
	</div>
	<div class="form-group">
	<input type="text" class="form-control" name="campground[image]" placeholder="Image" value="<%=campground.image%>">
	</div>
	<div class="form-group">
		<textarea name="campground[description]" cols="60" rows="10"><%=campground.description%></textarea>
	<!-- <input type="textarea" class="form-control" name="campground[description]" placeholder="description" value="<%=campground.description%>"> -->
	</div>


	<div class="form-group">
	<input type="submit" class="btn btn-lg btn-primary btn-block">
	</div>

</form>
<div>
<a href="/">Home</a>
</div>
</div>
<% include ../partials/footer %>
